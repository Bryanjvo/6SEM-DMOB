<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo_folhas_sutil"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryDarkColor"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/icone_bd"
        android:contentDescription="@string/todo"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trabalhando_com_banco_de_dados_no_android"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/branco_puro"
        android:textSize="22sp" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/layoutImagemFundo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_white_background"
            android:padding="32dp"
            android:elevation="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enunciadoInicio"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                android:textColor="@color/cinza_texto_escuro"
                android:layout_marginBottom="24dp"
                android:textStyle="bold"
                tools:text="Escolha uma das opções abaixo:" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btcriarbanco"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="@string/criarBancoInicio"
                    android:backgroundTint="@color/primaryColor"
                    android:textColor="@color/branco_puro"
                    android:layout_marginBottom="12dp"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/btexcluirdados"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="@string/manterMudas"
                    android:backgroundTint="@color/primaryLightColor"
                    android:textColor="@color/cinza_texto_escuro"
                    android:padding="12dp"
                    tools:text="Manter Mudas" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>