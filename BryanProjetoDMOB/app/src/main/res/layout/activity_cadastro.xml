<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fundo_folhas_sutil"
    tools:context=".CadastroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_background"
        android:padding="32dp"
        android:elevation="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Cadastro"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkColor"
            android:layout_marginBottom="40dp" />

        <EditText
            android:id="@+id/et_username_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escolha um Nome de UsuÃ¡rio"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/verde_escuro_natureza"
            android:textColor="@color/cinza_texto_escuro"
            android:textColorHint="@color/cinza_texto_claro"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/et_password_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite sua Senha"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/verde_escuro_natureza"
            android:textColor="@color/cinza_texto_escuro"
            android:textColorHint="@color/cinza_texto_claro"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CADASTRAR"
            android:padding="14dp"
            android:textSize="16sp"
            android:backgroundTint="@color/primaryDarkColor"
            android:textColor="@color/branco_puro"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:padding="14dp"
            android:textSize="16sp"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/branco_puro" />

    </LinearLayout>
</LinearLayout>